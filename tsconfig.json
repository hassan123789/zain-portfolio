{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@/components/*": ["./src/components/*"],
			"@/lib/*": ["./src/lib/*"],
			"@/styles/*": ["./src/styles/*"]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "react"
	},
	"include": ["src/**/*", "env.d.ts"],
	"exclude": ["node_modules", "dist"]
}
