---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'ZAIN | Action = f(Survival of Identity)',
  description = 'パキスタン×日本×双極×エンジニア。どこにも属せなかった者の生存記録。'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title}</title>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;700&family=Noto+Sans+JP:wght@300;400;500;700&display=swap" rel="stylesheet">

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
</head>
<body class="bg-void text-light font-mono antialiased overflow-x-hidden">
  <slot />
</body>
</html>
